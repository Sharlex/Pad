<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
       <shape android:shape="rectangle">
            <corners android:radius="@dimen/btnPadRadius" />
            <solid android:color="@color/btnPadColorClicked" />
            <padding android:bottom="@dimen/btnPadPadding"
                 android:left="@dimen/btnPadPadding" 
                 android:right="@dimen/btnPadPadding" 
                 android:top="@dimen/btnPadPadding" />
            <size android:height="@dimen/btnPadHeight" 
                android:width="@dimen/btnPadWidth" />
        </shape>
        
        </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btnPadRadius" />
            <solid android:color="@color/btnPadColor" />
            <padding android:bottom="@dimen/btnPadPadding" 
                android:left="@dimen/btnPadPadding"
                 android:right="@dimen/btnPadPadding" 
                 android:top="@dimen/btnPadPadding" />
            <size android:height="@dimen/btnPadHeight" 
                android:width="@dimen/btnPadWidth" />
        </shape>
        
        </item>

</selector>